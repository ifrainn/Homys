{
  "cli": { "version": ">= 10.0.0" },
  "build": {
    "production": {
      "android": { "buildType": "app-bundle" },
      "secrets": {
        "GOOGLE_SERVICES_JSON": {
          "type": "file",
          "targetPath": "android/app/google-services.json" 
        }
      }
    },
    "android-apk": {
      "distribution": "internal",
      "android": { "buildType": "apk" } 
    }
  },
  "submit": {
    "production": {
      "android": { "track": "internal" } 
    }
  }
}